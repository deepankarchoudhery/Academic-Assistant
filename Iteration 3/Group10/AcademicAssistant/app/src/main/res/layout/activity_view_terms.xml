<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a New Term"
        android:id="@+id/addTermBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText"
        android:padding="50dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/termsListView"
        android:layout_alignParentStart="true"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:padding="50dp"
        android:clickable="true"
        android:layout_below="@+id/termHeader"
        android:layout_above="@+id/deleteTermBtn"
        android:choiceMode="multipleChoice" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Term"
        android:id="@+id/deleteTermBtn"
        android:layout_above="@+id/addTermBtn"
        android:layout_alignEnd="@+id/addTermBtn"
        android:layout_toEndOf="@+id/termHeader" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT TERM"
        android:id="@+id/editTermBtn"
        android:layout_alignTop="@+id/deleteTermBtn"
        android:layout_alignEnd="@+id/termHeader"
        android:layout_toEndOf="@+id/viewGPABtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TERMS"
        android:id="@+id/termHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize = "40dp"
        android:textStyle = "bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW GPA"
        android:id="@+id/viewGPABtn"
        android:layout_above="@+id/addTermBtn"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/termHeader" />

</RelativeLayout>
